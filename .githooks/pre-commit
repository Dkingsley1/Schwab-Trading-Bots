#!/usr/bin/env bash
set -euo pipefail

max_bytes=$((50 * 1024 * 1024))
status=0

while IFS= read -r -d "" path; do
  case "$path" in
    *.sqlite|*.sqlite3|*.db)
      if [[ -f "$path" ]]; then
        size=$(wc -c < "$path" | tr -d " ")
        if (( size > max_bytes )); then
          echo "ERROR: '$path' is ${size} bytes (> 50MB). Use external storage or Git LFS." >&2
          status=1
        fi
      fi
      ;;
  esac
done < <(git diff --cached --name-only --diff-filter=ACMR -z)

PY_BIN="/Users/dankingsley/PycharmProjects/schwab_trading_bot/.venv312/bin/python"
if [[ ! -x "$PY_BIN" ]]; then
  PY_BIN="python3"
fi

"$PY_BIN" /Users/dankingsley/PycharmProjects/schwab_trading_bot/scripts/secret_scan.py --staged >/dev/null || status=1

if (( status != 0 )); then
  exit 1
fi
